<Page x:Class="WpfApplication1.SettingsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      mc:Ignorable="d" 
      d:DesignHeight="700" d:DesignWidth="1200"
	Title="Page2">
    <Page.Resources>
        <Style TargetType="{x:Type Button}">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Button}">
                        <Border Background="{TemplateBinding Background}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

		<DataTemplate x:Key="DataTemplateListPort">
        	<Grid Height="Auto">
        		<Grid.ColumnDefinitions>
        			<ColumnDefinition Width="8"/>
        			<ColumnDefinition/>
        		</Grid.ColumnDefinitions>
        		<Grid.RowDefinitions>
        			<RowDefinition/>
        			<RowDefinition/>
        		</Grid.RowDefinitions>
				<Grid Height="Auto" Width="Auto" Grid.RowSpan="1" Grid.ColumnSpan="1" Grid.Column="1">
        			<Grid.ColumnDefinitions>
        				<ColumnDefinition Width="*"/>
        				<ColumnDefinition Width="3*"/>
        			</Grid.ColumnDefinitions>
        			<Grid.RowDefinitions>
        				<RowDefinition Height="*"/>
        			</Grid.RowDefinitions>
        			<TextBlock  Foreground="{StaticResource White}" Background="Transparent" x:Name="idDelete" Text="{Binding Id}" Width="Auto" Height="Auto" HorizontalAlignment="Left" TextAlignment="Right" Grid.RowSpan="1" Margin="0" Grid.Column="0" RenderTransformOrigin="0.5,0.5"/>
        			<TextBlock  Foreground="{StaticResource White}" Background="{StaticResource Transparent}" Text="{Binding Name}"  Width="Auto" TextAlignment="Left" IsEnabled="True" Margin="0" RenderTransformOrigin="0.5,0.5" Height="Auto" Grid.ColumnSpan="1" Grid.Column="1" HorizontalAlignment="Stretch"/>
        		</Grid>
        		<Grid Height="Auto" Width="Auto" Grid.RowSpan="1" Grid.Row="1" Grid.ColumnSpan="1" Grid.Column="1">
        			<Grid.ColumnDefinitions>
        				<ColumnDefinition Width="3*"/>
        				<ColumnDefinition Width="6*"/>
        				<ColumnDefinition Width="3*"/>
        				<ColumnDefinition Width="5*"/>
        				<ColumnDefinition Width="3*"/>
        			</Grid.ColumnDefinitions>
        			<Grid.RowDefinitions>
        				<RowDefinition Height="*"/>
        			</Grid.RowDefinitions>
        			<TextBlock  Foreground="{StaticResource White}" Background="{StaticResource Transparent}" Text="{Binding Baudrate}"  Height="Auto" Width="Auto" TextAlignment="Right" Grid.Column="0" Grid.RowSpan="1" Grid.Row="0" Grid.ColumnSpan="1"/>
        			<TextBlock Foreground="{StaticResource White}" Background="{StaticResource Transparent}"  Text="{Binding Databits}" Height="Auto" TextAlignment="Right" Grid.Column="1" Grid.RowSpan="1" Grid.Row="0" Margin="0"/>
        			<TextBlock  Foreground="{StaticResource White}" Background="{StaticResource Transparent}" Text="{Binding Stopbit}"  Height="Auto" Width="Auto" TextAlignment="Right" Grid.Column="2" Grid.Row="0" Margin="0"/>
        			<TextBlock  Foreground="{StaticResource White}" Background="{StaticResource Transparent}" Text="{Binding Parity}"  Height="Auto" Width="Auto" TextAlignment="Right" Grid.Column="3" Grid.Row="0"/>
        			<TextBlock  Foreground="{StaticResource White}" Background="{StaticResource Transparent}" Text="{Binding Handshake}"  Height="Auto" Width="Auto" TextAlignment="Right" Grid.Column="4" Grid.Row="0" Margin="0"/>
        		</Grid>
        		<Rectangle Fill="#FF0080FF" HorizontalAlignment="Left" Height="Auto" Stroke="Black" VerticalAlignment="Stretch" Width="2" StrokeThickness="0" Margin="0,1.459,0,1.833" Grid.RowSpan="2"/>
			</Grid>
        </DataTemplate>

