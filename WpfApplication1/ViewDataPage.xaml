				<TextBlock x:Name="GridGGADGPSUTC" TextWrapping="Wrap" Grid.Column="3" Grid.Row="4" Foreground="White" FontSize="21.333" Margin="0.001,5,0,43.333"/>
				<Label x:Name="ggalat" Content="Lat : " Grid.Row="1" Foreground="{DynamicResource White}" FontSize="21.333"/>
				<Label x:Name="ggatypepos" Content="Pos : " Grid.Row="2" Foreground="{DynamicResource White}" FontSize="21.333"/>
				<Label x:Name="ggahdop" Content="Hdop : " Grid.Row="3" Foreground="{DynamicResource White}" FontSize="21.333"/>
				<Label x:Name="ggalon" Content="Lon : " Grid.Column="2" Grid.Row="1" Foreground="{DynamicResource White}" FontSize="21.333"/>
				<Label x:Name="ggnsat" Content="N° Sat : " Grid.Column="2" Grid.Row="2" Foreground="{DynamicResource White}" FontSize="21.333" Margin="3.96,0.832"/>
				<Label x:Name="ggaalt" Content="Alt (m)" Grid.Column="2" Grid.Row="3" Foreground="{DynamicResource White}" FontSize="21.333" Margin="3.96,0.832"/>
				<Label Content="Last DGPS:&#xA;" Grid.Column="2" Grid.Row="4" Foreground="{DynamicResource White}" FontSize="21.333" Margin="0,0,0,43.333"/>
				<Label x:Name="ggahdop_Copy" Content="Geoid : " Grid.Row="4" Foreground="{DynamicResource White}" FontSize="21.333" Margin="0,0,0,43.333"/>
				<Label x:Name="ggalat_Copy" Content="Time : " Foreground="{DynamicResource White}" Grid.Column="2" FontSize="21.333" Margin="3.96,0.832"/>
			</Grid>
			<Grid x:Name="GridRMC" Margin="2.5,0,0,0" Grid.Column="2" DataContext="{Binding MessageRMC}" Grid.RowSpan="2">
				<Grid.ColumnDefinitions>
					<ColumnDefinition Width="71*"/>
					<ColumnDefinition Width="148*"/>
					<ColumnDefinition Width="73*"/>
					<ColumnDefinition Width="151*"/>
				</Grid.ColumnDefinitions>
				<Grid.RowDefinitions>
					<RowDefinition Height="60*"/>
					<RowDefinition Height="68*"/>
					<RowDefinition Height="75*"/>
					<RowDefinition Height="69*"/>
					<RowDefinition Height="60*"/>
				</Grid.RowDefinitions>
				<TextBlock x:Name="GridRMCType"  Text="GPRMC"  TextWrapping="Wrap" FontSize="26.667" Foreground="{DynamicResource secondColor}" FontWeight="Bold" TextDecorations="{x:Null}" Grid.ColumnSpan="2" Margin="0,0,0.494,0"/>
				<TextBlock x:Name="GridRMCTime" HorizontalAlignment="Left" TextWrapping="Wrap" Width="226" FontSize="12" Margin="0.255,0,-2.255,0" Grid.Column="2" Foreground="White" Grid.ColumnSpan="2"/>
				<TextBlock x:Name="GridRMCLat" HorizontalAlignment="Left" TextWrapping="Wrap" Width="147.506" Grid.Row="1" FontSize="12" Foreground="White" Grid.Column="1" Margin="0,24.463,0,17.474"/>
				<TextBlock x:Name="GridRMCLon" HorizontalAlignment="Left" TextWrapping="Wrap" Width="151" Grid.Row="1" FontSize="12" Margin="0,24.463,0,17.474" Grid.Column="3" Foreground="White"/>
