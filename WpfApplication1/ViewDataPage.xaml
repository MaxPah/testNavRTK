					<ColumnDefinition Width="114*"/>
					<ColumnDefinition Width="163*"/>
				</Grid.ColumnDefinitions>
				<Grid.RowDefinitions>
					<RowDefinition Height="65*"/>
					<RowDefinition Height="65*"/>
					<RowDefinition Height="65*"/>
					<RowDefinition Height="65*"/>
					<RowDefinition Height="72*"/>
				</Grid.RowDefinitions>
				<TextBlock x:Name="GridGGAType" Text="GPGGA" HorizontalAlignment="Left" TextWrapping="Wrap" Width="215" Foreground="{DynamicResource secondColor}" FontSize="26.667" Grid.ColumnSpan="2" FontWeight="Bold" TextDecorations="{x:Null}"/>
				<TextBlock x:Name="GridGGATime" TextWrapping="Wrap" Grid.Column="3" Foreground="White" FontSize="18.667" Margin="0,5,0,0"/>
				<TextBlock x:Name="GridGGALat" TextWrapping="Wrap" Grid.Row="1" Foreground="White" Grid.Column="1" Margin="0,5,0,0" FontSize="18.667"/>
				<TextBlock x:Name="GridGGALon" TextWrapping="Wrap" Grid.Column="3" Grid.Row="1" Foreground="White" FontSize="18.667" Margin="0.001,5,0.13,0"/>
				<TextBlock x:Name="GridGGAQual" TextWrapping="Wrap" Grid.Row="2" Foreground="White" FontSize="18.667" Grid.Column="1" Margin="0,5,0,0"/>
				<Border x:Name="GridGGAnSatFather" Grid.Column="3" Grid.Row="2" Margin="0,0.832,0,0" Height="50.232" VerticalAlignment="Top" HorizontalAlignment="Left" Width="57.18">
					<TextBlock x:Name="GridGGANSat" TextWrapping="Wrap" FontSize="26.667" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="28.59,7.382,0,0"/>
				</Border>
				<TextBlock x:Name="GridGGADil" TextWrapping="Wrap" Grid.Row="3" Foreground="White" FontSize="21.333" Grid.Column="1" Margin="0,5,0,0"/>
				<TextBlock x:Name="GridGGAAlt" TextWrapping="Wrap" Grid.Column="3" Grid.Row="3" Foreground="White" FontSize="21.333" Margin="0,5,0,0.832"/>
